<Login>:
    ben: benName.text
    pw: passwort.text
    knopf: btn

    Image:
        source: "Main/Pictures/dragon.png"
        allow_stretch: True
        keep_ratio: False

    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 2
            Label:
                text: "Benutzername"
                font_size: 30
            TextInput:
                id: benName
                multiline: False
                font_size: 30
            Label:
                text: "Passwort"
                font_size: 30
                
            TextInput:
                password: True
                id: passwort
                multiline: False
                font_size: 30
        Button:
            text: "anmelden"
            background_normal: "Main/Pictures/IMG_6515.jpg"
            id: btn
            size_hint: (1., 0.5)
            font_size: 30
            on_release:
                root.loginPopup()
                root.manager.current = "geheim" if passwort.text == "1234" and benName.text == "Python" else "login"
                root.manager.transition.direction = "left"

<geheimerBereich>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "geheimer Bereich"
            font_size: 30
        Button:
            text: "zurück"
            font_size: 30
            on_release:
                root.manager.current = "login"
                root.manager.transition.direction = "right"